<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itwill.shape.repository.PleaseRepository">
    <insert id="insertBlob"
        parameterType="com.itwill.shape.domain.Please">
        INSERT INTO please (
              filename
            , blob
        ) VALUES (
              #{fileName}
            , #{blob}
        )
    </insert>
    
    <select id="selectBlobList" resultType="com.itwill.shape.domain.Please">
        SELECT
            *
        FROM please
    </select>
</mapper>